<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="280dp"
    android:layout_height="320dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/border_top_design"
        android:orientation="vertical">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/btn_close_dialog"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@drawable/close_icon_white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="@string/can_count"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLength="4"
            android:id="@+id/txt_can_count"
            android:text="40"
            android:textSize="20sp"
            android:textColor="@color/bg_dark_blue"
            android:background="@drawable/border_design_circle"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_margin="10dp">

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btn_add_count"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/border_design_circle_blue">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/add_can_icon"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/btn_minus_count"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="70dp"
                android:background="@drawable/border_design_circle_blue">

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/minus_can_icon"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:id="@+id/btn_submit"
            android:text="@string/update"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:background="@color/bg_dark_blue"/>

    </LinearLayout>

</LinearLayout>